# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

include ../src/common.make

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR=../vendor/googletest/googletest

# Where to find user code.
USER_DIR=.

LIBPUDDLES_CXXFLAGS:=-iquote../src/include -iquote../vendor/cpp-common/include/ -std=c++20
LIBPUDDLES_LDFLAGS:=-L../lib/ -Wl,-R../lib/ -lvram -lvramfs

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include

# Flags passed to the C++ compiler.
CXXFLAGS += -g -Wall -Wextra -pthread $(LIBPUDDLES_CXXFLAGS) \
	-iquote../src/include

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = $(wildcard *.o)

# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

DEPENDS := $(wildcard ./*.hh)
EXTRA_SOURCES := $(wildcard *.cc)
OBJECTS := $(patsubst %.cc, %.o, $(EXTRA_SOURCES))

# House-keeping build targets.

all : test.bin

clean :
	rm -f test.bin gtest.a gtest_main.a *.o

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
gtest-all.o : $(GTEST_SRCS_)
	$(PUDDLES_CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc

gtest_main.o : $(GTEST_SRCS_)
	$(PUDDLES_CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc

gtest.a : gtest-all.o
	$(PUDDLES_AR) $(ARFLAGS) $@ $^

gtest_main.a : gtest-all.o gtest_main.o
	$(PUDDLES_AR) $(ARFLAGS) $@ $^

%.o: %.cc $(DEPENDS)
	$(PUDDLES_CXX) -c $(CXXFLAGS) $< -o $@

test_%.o : $(USER_DIR)/test_%.cc $(GTEST_HEADERS)
	$(PUDDLES_CXX) $(CPPFLAGS) $(CXXFLAGS) -c $<

test.bin : $(OBJECTS) gtest_main.a
	$(PUDDLES_CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ -o $@ \
		$(LIBPUDDLES_LDFLAGS)
